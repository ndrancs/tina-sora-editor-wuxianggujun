<!-- 垂直分组折叠式文本操作菜单面板 -->
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:id="@+id/panel_root">

	<!-- 主菜单面板（垂直排列的分组标题） -->
	<LinearLayout
		android:id="@+id/panel_main_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:minWidth="120dp"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:visibility="visible">

		<!-- 分组标题容器（动态添加） -->
		<LinearLayout
			android:id="@+id/panel_group_titles_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" />

	</LinearLayout>

	<!-- 子菜单面板（展开后的分组内容） -->
	<LinearLayout
		android:id="@+id/panel_sub_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:minWidth="140dp"
		android:paddingTop="4dp"
		android:paddingBottom="8dp"
		android:visibility="gone">

		<!-- 收起按钮（显示分组名称 + ◀） -->
		<TextView
			android:id="@+id/panel_btn_collapse"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:gravity="center_vertical"
			android:paddingStart="12dp"
			android:paddingEnd="12dp"
			android:textSize="14sp"
			android:textStyle="bold"
			android:singleLine="true"
			android:drawableStart="@drawable/ic_expand_less"
			android:drawablePadding="8dp"
			android:background="?android:attr/selectableItemBackground" />

		<!-- 分隔线 -->
		<View
			android:id="@+id/panel_divider"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginStart="12dp"
			android:layout_marginEnd="12dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			android:background="#20808080" />

		<!-- 子菜单项容器（动态添加） -->
		<LinearLayout
			android:id="@+id/panel_sub_items_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" />

	</LinearLayout>

</FrameLayout>
